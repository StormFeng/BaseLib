<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="360dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.huashitu.liveradio.activity.Activity_Login">
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_login_bg"
        android:id="@+id/imageView2" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:paddingLeft="34dp"
        android:paddingRight="34dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/et_Phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="15.3sp"
            android:singleLine="true"
            android:hint="手机号"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/divide_line"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="34dp"
        android:paddingRight="34dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="31.3dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_Code"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="15.3sp"
                android:inputType="number"
                android:maxLength="6"
                android:lines="1"
                android:hint="验证码"/>

            <Button
                android:id="@+id/btn_Code"
                android:layout_width="60dp"
                android:layout_height="16dp"
                android:textColor="@color/white"
                android:background="@drawable/radius_8_purple"
                android:textSize="8sp"
                android:text="获取验证码"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/divide_line"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="34dp"
        android:paddingRight="34dp"
        android:layout_marginTop="34.3dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/et_Pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="15.3sp"
            android:singleLine="true"
            android:hint="密码"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/divide_line"/>
    </LinearLayout>
    
    <Button
        android:id="@+id/btn_Register"
        android:layout_width="match_parent"
        android:layout_height="41.3dp"
        android:text="注册"
        android:layout_margin="34dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@drawable/button_press"/>
</LinearLayout>
