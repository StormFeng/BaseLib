<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon_person_bg">

    <com.midian.base.widget.BaseLibTopbarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.midian.base.widget.BaseLibTopbarView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="307dp"
            android:layout_height="wrap_content"
            android:background="@drawable/radius_10_white_r"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="@drawable/radius_10_white"
                android:paddingBottom="30dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_Profit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textSize="34dp"
                    android:textColor="#9B3AC8"
                    android:layout_marginTop="30dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收益映票"
                    android:textSize="16sp"
                    android:textColor="#938E95"
                    android:layout_marginTop="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="none"
                    android:text="- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -------------------------"
                    android:textSize="15sp"
                    android:textColor="#9B3AC8"
                    android:layout_marginTop="25dp"/>

                <TextView
                    android:id="@+id/tv_Tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textSize="34dp"
                    android:textColor="#AA8CFC"
                    android:layout_marginTop="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可领取红包（元）"
                    android:textSize="16sp"
                    android:textColor="#938E95"
                    android:layout_marginTop="16dp"/>
                <Button
                    android:id="@+id/btn_Exchange"
                    android:layout_width="226dp"
                    android:layout_height="40dp"
                    android:background="@drawable/radius_22_purple_stroke"
                    android:text="兑换"
                    android:textColor="#A24BCC"
                    android:textSize="16sp"
                    android:layout_marginTop="30dp"/>

                <Button
                    android:id="@+id/btn_ReceiveTip"
                    android:layout_width="226dp"
                    android:layout_height="40dp"
                    android:background="@drawable/radius_22_purple_stroke"
                    android:text="领取红包"
                    android:textColor="#A24BCC"
                    android:textSize="16sp"
                    android:layout_marginTop="19dp"/>

                <TextView
                    android:id="@+id/tv_CommonProblem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="常见问题"
                    android:layout_marginTop="20dp"
                    android:textColor="#A24BCC"
                    android:textSize="15sp"
                    android:padding="5dp"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>